.search-bar
  position: relative
  width: 100%
  margin-bottom: 20px
  input[type='text']
    height: 50px
    width: 100%
    box-sizing: border-box
    border: none
    box-shadow: #534e4e 6px 6px 15px
    font-size: 12px
    padding: 0 20px
    @media screen and (min-width: 768px)
      height: 65px
      font-size: 20px
      padding: 0 15px 0 60px
  &__icon
    fill: #CFD8DC
    position: absolute
    width: 10px
    height: 10px
    top: 13px
    left: 7px
    @media screen and (min-width: 768px)
      width: 25px
      height: 25px
      top: 22px
      left: 20px
  ::placeholder
    color: #CFD8DC
    font-size: 12px
    @media screen and (min-width: 768px)
      font-size: 20px